---
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import Header from '../../components/Header.astro';
import { SITE_TITLE } from '../../consts';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`Blog | ${SITE_TITLE}`} description="Technical tutorials, thoughts, and experiments from Craig Dennis." />
	</head>
	<body>
		<Header />
		<main>
			<header class="page-header">
				<h1>Blog</h1>
				<p>Technical tutorials, thoughts, and experiments.</p>
			</header>

			{posts.length === 0 ? (
				<div class="empty-state">
					<p>No posts yet. Check back soon!</p>
				</div>
			) : (
				<ul class="post-list">
					{posts.map((post, index) => (
						<li class:list={['post-item', { featured: index === 0 }]}>
							<a href={`/blog/${post.id}/`}>
								{post.data.heroImage && (
									<div class="post-image">
										<Image 
											width={index === 0 ? 800 : 400} 
											height={index === 0 ? 400 : 200} 
											src={post.data.heroImage} 
											alt="" 
										/>
									</div>
								)}
								<div class="post-info">
									<span class="post-date">
										<FormattedDate date={post.data.pubDate} />
									</span>
									<h2 class="post-title">{post.data.title}</h2>
									{post.data.description && (
										<p class="post-description">{post.data.description}</p>
									)}
								</div>
							</a>
						</li>
					))}
				</ul>
			)}
		</main>
		<Footer />
	</body>
</html>

<style>
	.page-header {
		margin-bottom: var(--space-2xl);
		padding-bottom: var(--space-xl);
		border-bottom: 2px solid var(--border-color);
	}

	.page-header h1 {
		margin-bottom: var(--space-sm);
	}

	.page-header p {
		color: var(--text-secondary);
		margin: 0;
		font-size: 1.125rem;
	}

	.empty-state {
		text-align: center;
		padding: var(--space-3xl) var(--space-lg);
		background: var(--bg-surface);
		border: 2px solid var(--border-color);
		border-radius: 12px;
	}

	.empty-state p {
		color: var(--text-secondary);
		margin: 0;
	}

	.post-list {
		list-style: none;
		padding: 0;
		margin: 0;
		display: flex;
		flex-direction: column;
		gap: var(--space-lg);
	}

	.post-item {
		margin: 0;
	}

	.post-item a {
		display: block;
		padding: var(--space-lg);
		background: var(--bg-surface);
		border: 2px solid var(--border-color);
		border-radius: 12px;
		text-decoration: none;
		transition: border-color 0.15s ease, transform 0.15s ease;
	}

	.post-item a:hover {
		border-color: var(--accent-primary);
		transform: translateY(-2px);
	}

	.post-image {
		margin-bottom: var(--space-md);
	}

	.post-image img {
		width: 100%;
		height: auto;
		border-radius: 8px;
		border: 1px solid var(--border-color);
	}

	.post-date {
		display: block;
		font-size: 0.875rem;
		color: var(--text-muted);
		margin-bottom: var(--space-xs);
	}

	.post-title {
		margin: 0 0 var(--space-sm) 0;
		font-size: 1.5rem;
		color: var(--text-primary);
		line-height: 1.3;
	}

	.post-item a:hover .post-title {
		color: var(--accent-primary);
	}

	.post-description {
		margin: 0;
		color: var(--text-secondary);
		font-size: 1rem;
		line-height: 1.6;
	}

	/* Featured post (first in list) */
	.post-item.featured .post-title {
		font-size: 1.75rem;
	}

	@media (max-width: 640px) {
		.post-item a {
			padding: var(--space-md);
		}

		.post-title {
			font-size: 1.25rem;
		}

		.post-item.featured .post-title {
			font-size: 1.5rem;
		}
	}
</style>
